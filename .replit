modules = ["web", "nodejs-20", "go-1.24"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["hugo"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hugo Server"

[[workflows.workflow]]
name = "Hugo Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42473
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["hugo", "server", "--bind", "0.0.0.0", "--port", "5000", "--appendPort=false", "--environment", "production", "--baseURL", "/"]
build = ["npm", "run", "build"]
